<%layout("/layouts/boilerplate.ejs")-%>

<body>
    <div class="main">
        <form method="post" action="/signup"   class="login">
            <div class="title">
                <p>Sign Up</p>
            </div>
            <div class="small">
                <div class="input1">
                    <label for="username">Username</label>
                    <input type="text" class="username" name="username" placeholder="Enter your Username">
                </div>
                <div class="input2">

                    <label for="username">Password</label>
                    <input type="password" class="username" name="password" placeholder="Enter your Password">
                </div>
        
            </div>
            <div class="btn" style="gap: 4rem;">
                <a href="/" class="back"><img src="left-chevron.png" style="width: 2rem;" alt="">Back</a>
                <button>Sign Up</button>
            </div>
            
        </form>
    </div>
</body>
